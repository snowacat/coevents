<!--Title of this page-->
<% title "CoEvents - Reset password" %>
<!--The main content of this page-->
<div class="container">
  <div class="masthead">
    <h3 class="muted">CoEvents - Reset Password</h3>
  </div>
  <div id="resetPassword">
    <%= form_tag password_resets_path, method: :post, id: 'passwordResetForm' do %>
        <div class="fieldBox">
          <h4>Your email: </h4>

          <div class="pictureBox"></div>
          <%= text_field_tag :email, nil, placeholder: 'Email', id: 'email' %>
        </div>
        <%= submit_tag 'Reset Password', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', { action: 'cancel', controller: 'sessions'}, class: 'btn btn-warning' %>
    <% end %>
  </div>
</div> <!-- /container -->
